<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tom.rpistreaming.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Streaming APP"
        android:id="@+id/logoTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Test"
        android:id="@+id/btnConnectTest"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnStreaming"
        android:layout_marginTop="30dp"
        android:typeface="normal"
        android:onClick="onConnectTest"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streaming"
        android:id="@+id/btnStreaming"
        android:layout_marginTop="27dp"
        android:typeface="normal"
        android:layout_below="@+id/btnSetting"
        android:layout_alignStart="@+id/btnConnectTest"
        android:layout_alignEnd="@+id/btnConnectTest"
        android:onClick="showStreamingView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/btnSetting"
        android:typeface="normal"
        android:layout_alignEnd="@+id/btnStreaming"
        android:layout_alignStart="@+id/btnStreaming"
        android:onClick="showSettingView"
        android:layout_below="@+id/logoTxt"
        android:layout_marginTop="30dp" />
</RelativeLayout>
